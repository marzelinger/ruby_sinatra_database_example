<!-- views/post_page.erb -->
<h2><%= @post.title %></h2>
<p>Created: <%= @post.created_at %></p>
<p><%= @post.body %></p>
<a href="/postdelete/<%= @post.id %>" name="_method" value="POST">Delete Post</a>
<!--using the name = "_method" and the value = "delete" specifies that we want to delete the post-->

<h2>Edit Post</h2>
<form method="post" action="/postchange/<%= @post.id %>"> 
    <!--this means that this will leap to the put method of the /post/idnumber in apps.rb-->
    <input type="text" name="title" value="<%= @post.title %>">
    <input type="text" name="body" value="<%= @post.body %>">
    <button type="submit">Update Post</button>
</form>